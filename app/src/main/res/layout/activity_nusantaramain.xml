<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?colorPrimary"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical">
    
    <androidx.appcompat.widget.Toolbar
        android:background="@color/colorAccent"
        android:id="@+id/toolbar_main"
        android:layout_width="fill_parent"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        android:layout_height="?actionBarSize"/>
    
    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/norem"
        android:layout_height="fill_parent"
        android:layout_marginTop="5.0dip"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        app:cardCornerRadius="10.0dip">
        
        <RelativeLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">
            
            <ScrollView
                android:id="@+id/main_scroll_view"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:scrollbars="none">
                
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:orientation="vertical">
                    
                    <LinearLayout
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent"
                        android:orientation="vertical">
                        
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:orientation="vertical">
                            
                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20.0dip"
                                android:layout_marginTop="6.0dip"
                                android:layout_width="wrap_content"
                                android:text="Home"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="?colorPrimary"
                                android:textSize="20.0sp"
                                android:textStyle="bold"/>
                            
                        
                        </LinearLayout>
                        
                        <LinearLayout
                            android:gravity="center"
                            android:layout_height="200.0dip"
                            android:layout_width="fill_parent"
                            android:orientation="horizontal"
                            android:padding="10.0dip">
                            
                            <androidx.cardview.widget.CardView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/norem2"
                                android:layout_height="fill_parent"
                                android:layout_marginBottom="5.0dip"
                                android:layout_marginLeft="5.0dip"
                                android:layout_marginTop="5.0dip"
                                android:layout_weight="1.0"
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                app:cardCornerRadius="20.0dip"
                                app:cardElevation="5.0dip">
                                
                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_height="fill_parent"
                                    android:layout_width="150.0dip"
                                    android:orientation="vertical">
                                    
                                    <LinearLayout
                                        android:layout_height="65.0dip"
                                        android:layout_width="fill_parent"
                                        android:orientation="vertical">
                                        
                                        <TextView
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="15.0dip"
                                            android:layout_width="wrap_content"
                                            android:text="Time Left"
                                            android:textColor="@color/colorPrimary"/>
                                        
                                        <LinearLayout
                                            android:layout_height="fill_parent"
                                            android:layout_width="fill_parent"
                                            android:orientation="vertical">
                                            
                                            <TextView
                                                android:id="@+id/timerTextView"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="15.0dip"
                                                android:layout_width="wrap_content"
                                                android:text="00:00:00"
                                                android:textAppearance="?android:textAppearanceMedium"
                                                android:textColor="@color/colorPrimary"
                                                android:textSize="20.0sp"
                                                android:textStyle="bold"/>
                                            
                                        
                                        </LinearLayout>
                                        
                                    
                                    </LinearLayout>
                                    
                                    <LinearLayout
                                        android:layout_height="65.0dip"
                                        android:layout_marginTop="10.0dip"
                                        android:layout_width="fill_parent"
                                        android:orientation="vertical">
                                        
                                        <TextView
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="15.0dip"
                                            android:layout_width="wrap_content"
                                            android:text="Add More Time ?"
                                            android:textColor="@color/colorPrimary"/>
                                        
                                        <LinearLayout
                                            android:gravity="center"
                                            android:layout_height="fill_parent"
                                            android:layout_width="fill_parent"
                                            android:orientation="vertical">
                                            
                                            <Button
                                                android:background="@drawable/butys"
                                                android:id="@+id/btnAddTime"
                                                android:layout_height="35.0dip"
                                                android:layout_marginBottom="5.0dip"
                                                android:layout_marginTop="5.0dip"
                                                android:layout_width="120.0dip"
                                                android:text="ADD + TIME"
                                                android:textColor="#ffffffff"
                                                style="?android:buttonStyleSmall"/>
                                            
                                        
                                        </LinearLayout>
                                        
                                    
                                    </LinearLayout>
                                    
                                
                                </LinearLayout>
                                
                            
                            </androidx.cardview.widget.CardView>
                            
                            <View
                                android:layout_height="fill_parent"
                                android:layout_width="15.0dip"/>
                            
                            <androidx.cardview.widget.CardView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/norem1"
                                android:layout_height="fill_parent"
                                android:layout_marginBottom="5.0dip"
                                android:layout_marginRight="5.0dip"
                                android:layout_marginTop="5.0dip"
                                android:layout_weight="1.0"
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                app:cardCornerRadius="20.0dip"
                                app:cardElevation="5.0dip">
                                
                                <LinearLayout
                                    android:gravity="center"
                                    android:id="@+id/a"
                                    android:layout_height="fill_parent"
                                    android:layout_width="150.0dip"
                                    android:orientation="vertical">
                                    
                                    <LinearLayout
                                        android:layout_height="50.0dip"
                                        android:layout_width="fill_parent"
                                        android:orientation="vertical">
                                        
                                        <TextView
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="15.0dip"
                                            android:layout_width="wrap_content"
                                            android:text="Upload"
                                            android:textColor="@color/colorPrimary"/>
                                        
                                        <LinearLayout
                                            android:layout_height="wrap_content"
                                            android:layout_width="fill_parent"
                                            android:orientation="vertical">
                                            
                                            <TextView
                                                android:id="@+id/bytesOut"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="15.0dip"
                                                android:layout_width="wrap_content"
                                                android:text="0KB"
                                                android:textAppearance="?android:textAppearanceSmall"
                                                android:textColor="@color/colorPrimary"
                                                android:textStyle="bold"/>
                                            
                                        
                                        </LinearLayout>
                                        
                                    
                                    </LinearLayout>
                                    
                                    <LinearLayout
                                        android:layout_height="50.0dip"
                                        android:layout_marginTop="10.0dip"
                                        android:layout_width="fill_parent"
                                        android:orientation="vertical">
                                        
                                        <TextView
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="15.0dip"
                                            android:layout_width="wrap_content"
                                            android:text="Download"
                                            android:textColor="@color/colorPrimary"/>
                                        
                                        <LinearLayout
                                            android:layout_height="wrap_content"
                                            android:layout_width="fill_parent"
                                            android:orientation="vertical">
                                            
                                            <TextView
                                                android:id="@+id/bytesIn"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="15.0dip"
                                                android:layout_width="wrap_content"
                                                android:text="0KB"
                                                android:textAppearance="?android:textAppearanceSmall"
                                                android:textColor="@color/colorPrimary"
                                                android:textStyle="bold"/>
                                            
                                        
                                        </LinearLayout>
                                        
                                    
                                    </LinearLayout>
                                    
                                    <LinearLayout
                                        android:layout_height="wrap_content"
                                        android:layout_width="fill_parent"
                                        android:orientation="vertical">
                                        
                                        <TextView
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="15.0dip"
                                            android:layout_width="wrap_content"
                                            android:text="Duration"
                                            android:textColor="@color/colorPrimary"/>
                                        
                                        <LinearLayout
                                            android:layout_height="wrap_content"
                                            android:layout_width="fill_parent"
                                            android:orientation="vertical">
                                            
                                            <Chronometer
                                                android:id="@+id/chronometer"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="15.0dip"
                                                android:layout_width="wrap_content"
                                                android:text="0h:00m:0s"
                                                android:textAppearance="?android:textAppearanceSmall"
                                                android:textColor="@color/colorPrimary"
                                                android:textStyle="bold"/>
                                            
                                        
                                        </LinearLayout>
                                        
                                    
                                    </LinearLayout>
                                    
                                
                                </LinearLayout>
                                
                            
                            </androidx.cardview.widget.CardView>
                            
                        
                        </LinearLayout>
                            
                            <RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="5dp">

						<LinearLayout
							android:orientation="horizontal"
							android:layout_width="match_parent"
							android:layout_height="2dp"
							android:background="?colorPrimary"
							android:layout_marginLeft="30dp"
							android:layout_marginRight="30dp"
							android:layout_centerVertical="true"/>

						<LinearLayout
							android:orientation="horizontal"
							android:layout_width="wrap_content"
							android:layout_height="20dp"
							android:layout_centerHorizontal="true"
							android:layout_centerVertical="true"
							android:background="@drawable/bg_spinner"
							android:paddingLeft="5dp"
							android:paddingRight="5dp"
							android:gravity="center">

						<TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Config Version : "
                                    android:textColor="@color/colorSecondaryBackground"
                                    android:textSize="13sp"
                                    android:textStyle="bold"
                                    android:visibility="visible"/>
                                
                                <TextView
                                    android:id="@+id/config_v"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Text"
                                    android:textColor="@color/colorSecondaryBackground"
                                    android:textSize="13sp"
                                    android:textStyle="bold"
                                    android:visibility="visible"/>
                                    
                                    
                                
                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text=" | App Version : "
                                    android:textColor="@color/colorSecondaryBackground"
                                    android:textSize="13sp"
                                    android:textStyle="bold"/>
                                
                                <TextView
                                    android:id="@+id/appVersion"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:textColor="@color/colorSecondaryBackground"
                                    android:textSize="13sp"
                                    android:textStyle="bold"/>

						</LinearLayout>

					</RelativeLayout>

                        
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:orientation="vertical">
                            
                            <androidx.cardview.widget.CardView
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="0.0dip"
                                android:layout_marginLeft="15.0dip"
                                android:layout_marginRight="15.0dip"
                                android:layout_marginTop="10dip"
                                android:layout_width="fill_parent"
                                app:cardCornerRadius="20.0dip"
                                app:cardPreventCornerOverlap="false">
                                
                                <LinearLayout
                                    android:layout_height="50.0dip"
                                    android:layout_width="fill_parent"
                                    android:orientation="horizontal">
                                    
                                    <LinearLayout
                                        android:gravity="center"
                                        android:layout_height="fill_parent"
                                        android:layout_width="50.0dip"
                                        android:orientation="vertical">
                                        
                                        <LinearLayout
                                            android:background="@drawable/location"
                                            android:layout_height="35.0dip"
                                            android:layout_width="35.0dip"
                                            android:orientation="vertical"/>
                                        
                                    
                                    </LinearLayout>
                                    
                                    <View
                                        android:background="?android:dividerHorizontal"
                                        android:layout_height="fill_parent"
                                        android:layout_width="1.0dip"/>
                                    
                                    <Spinner
                                        android:background="@android:color/transparent"
                                        android:dropDownWidth="fill_parent"
                                        android:id="@+id/serverSpinner"
                                        android:layout_height="50dip"
                                        android:layout_width="match_parent"
                                        android:scrollbars="none"
                                        android:spinnerDropDownItemStyle="@style/Edsondialog"
                                        android:spinnerMode="dialog"/>
                                    
                                
                                </LinearLayout>
                                
                            
                            </androidx.cardview.widget.CardView>
                            
                            <androidx.cardview.widget.CardView
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5.0dip"
                                android:layout_marginLeft="15.0dip"
                                android:layout_marginRight="15.0dip"
                                android:layout_marginTop="10dip"
                                android:layout_width="fill_parent"
                                app:cardCornerRadius="20.0dip"
                                app:cardPreventCornerOverlap="false">
                                
                                <LinearLayout
                                    android:layout_height="50.0dip"
                                    android:layout_width="fill_parent"
                                    android:orientation="horizontal">
                                    
                                    <LinearLayout
                                        android:gravity="center"
                                        android:layout_height="fill_parent"
                                        android:layout_width="50.0dip"
                                        android:orientation="vertical">
                                        
                                        <LinearLayout
                                            android:background="@drawable/server"
                                            android:layout_height="35.0dip"
                                            android:layout_width="35.0dip"
                                            android:orientation="vertical"/>
                                        
                                    
                                    </LinearLayout>
                                    
                                    <View
                                        android:background="?android:dividerHorizontal"
                                        android:layout_height="fill_parent"
                                        android:layout_width="1.0dip"/>
                                    
                                    <Spinner
                                        android:background="@android:color/transparent"
                                        android:dropDownWidth="fill_parent"
                                        android:id="@+id/payloadSpinner"
                                        android:layout_height="50dip"
                                        android:layout_width="match_parent"
                                        android:scrollbars="none"
                                        android:spinnerDropDownItemStyle="@style/Edsondialog"
                                        android:spinnerMode="dialog"/>
                                    
                                
                                </LinearLayout>
                                
                            
                            </androidx.cardview.widget.CardView>
                            
                        
                        </LinearLayout>
                        
                        <LinearLayout
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:orientation="vertical">
                            
                            <Button
                                android:background="@drawable/butys"
                                android:id="@+id/activity_starterButtonMain"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5.0dip"
                                android:layout_marginLeft="50.0dip"
                                android:layout_marginRight="50.0dip"
                                android:layout_marginTop="10.0dip"
                                android:layout_width="fill_parent"
                                android:text="Connect"
                                android:textAllCaps="false"
                                android:textColor="#ffffffff"
                                style="?android:buttonStyleSmall"/>
                            
                        
                        </LinearLayout>
                        
                        <com.google.android.gms.ads.AdView
                            xmlns:ads="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/adBannerMainView"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5.0dip"
                            android:layout_width="fill_parent"
                            ads:adSize="BANNER"
                            ads:adUnitId="ca-app-pub-3940256099942544/6300978111"/>
                        
                    
                    </LinearLayout>
                    
                
                </LinearLayout>
                
            
            </ScrollView>
            
        
        </RelativeLayout>
        
    
    </androidx.cardview.widget.CardView>
    

</LinearLayout>