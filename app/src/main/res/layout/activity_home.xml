<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_light"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:visibility="gone">
    
    <LinearLayout
        android:id="@+id/activity_mainLinearLayout"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:padding="10dp">
        
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="20dp">
            
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10.0dip"
                    android:gravity="bottom|center"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">
                    
                    <LinearLayout
                        android:gravity="bottom|center"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dip"
                        android:layout_width="match_parent"
                        android:orientation="vertical">
                        
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">
                            
                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Select Server"
                                android:textColor="@color/colorText"/>
                            
                            <Spinner
                                android:id="@+id/serverSpinner"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:spinnerMode="dialog"/>
                            
                        
                        </LinearLayout>
                        
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">
                            
                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Select Payload"
                                android:textColor="@color/colorText"/>
                            
                            <Spinner
                                android:id="@+id/payloadSpinner"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:spinnerMode="dialog"/>
                            
                        
                        </LinearLayout>
                        
                        <LinearLayout
                            android:gravity="left"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="2dp"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">
                            
                            <CheckBox
                                android:buttonTint="@color/white"
                                android:id="@+id/useDns"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="DNS (Google DNS)"/>
                            
                            <CheckBox
                                android:buttonTint="@color/white"
                                android:id="@+id/startSSHCheckbox"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:text="Start SSH"/>
                            
                        
                        </LinearLayout>
                        
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="2dp"
                            android:layout_width="match_parent"
                            android:orientation="vertical">
                            
                            <com.google.android.gms.ads.AdView
                                xmlns:ads="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/adBannerMainView"
                                android:layout_alignParentBottom="false"
                                android:layout_centerHorizontal="true"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_width="wrap_content"
                                android:visibility="gone"
                                ads:adSize="BANNER"
                                ads:adUnitId="ca-app-pub-2077509769019467/7218529715"
                                android:layout_gravity="center"/>
                            
                            <LinearLayout
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:orientation="horizontal">
                                
                                <Button
                                    android:background="@drawable/button_blue"
                                    android:id="@+id/activity_starterButtonMain"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_width="match_parent"
                                    android:text="@string/start"
                                    android:textColor="#FFFFFF"
                                    android:textStyle="bold"/>
                                
                            
                            </LinearLayout>
                            
                        
                        </LinearLayout>
                        
                        <Space
                            android:layout_height="10dip"
                            android:layout_width="match_parent"/>
                        
                    
                    </LinearLayout>
                    
                
                </androidx.cardview.widget.CardView>
                
            
            </LinearLayout>
            
            <ImageView
                android:layout_height="140dp"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:src="@drawable/nusantara"/>
            
        
        </RelativeLayout>
        
    
    </LinearLayout>
    

</RelativeLayout>